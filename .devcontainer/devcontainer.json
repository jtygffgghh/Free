{
  "name": "monero-gui-miner",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "postStartCommand": "bash .devcontainer/setup.sh",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "version": "latest"
    }
  },
  "mounts": [
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
  ],
  "hostRequirements": {
    "cpus": 2,
    "memory": "4gb"
  },
  "remoteUser": "vscode"
}
